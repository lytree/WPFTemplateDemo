<Border x:Class="WPFTemplate.UserControl.Main.UnderConstruction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Background="{DynamicResource RegionBrush}"
        CornerRadius="4">
    <hc:TransitioningContentControl>
       <StackPanel Margin="32">
            <hc:GifImage Width="400" Height="300">
                <hc:GifImage.Source>
                    <BitmapImage UriSource="/WPFTemplate;component/Resources/Img/under_construction.gif"/>
                </hc:GifImage.Source>
            </hc:GifImage>
            <TextBlock Margin="0,16,0,0" HorizontalAlignment="Center" Text="敬请期待" Style="{StaticResource TextBlockLargeBold}"/>
        </StackPanel>
    </hc:TransitioningContentControl>
</Border>
